{
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "compat",
        "import"
    ],
    "rules": {
        "one-var": 0,
        "compat/compat": 2
    },
    "settings": {
        "import/resolver": "webpack",
        "polyfills": [
            "fetch"
        ]
    },
    "extends": [
        "plugin:freaktechnik/browser",
        "plugin:react/recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ]
}
